<div class="container">
  <div class="row justify-content-center m-5">
    <div class="col-sm-6 game-form m-5">
      <h2 class="mt-5 m-3">Create a new world</h2>
      <%= simple_form_for(@game_world) do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :photos, as: :file, input_html: { multiple: true }, label: "Cover Photo" %>
        <%= f.input :photos, as: :file, input_html: { multiple: true }, label: "Additional Photos, Max of 2 Photos." %>
        <%= f.submit "Create world", class: "m-3 btn btn-flat", style: "background-color:#62E7AC" %> <%= link_to "Go Back", game_worlds_path, class: "m-3 btn-flat" %>
      <% end %>
    </div>
  </div>
</div>

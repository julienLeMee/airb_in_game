<div class="reservation-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdnb.artstation.com/p/assets/images/images/002/606/511/large/rakesh-nair-world-map-01.jpg?1463573467);">
    <div class="container">
      <div class="row justify-content-center">
        <ul class="d-flex">
          <% @reservations.each do |reservation| %>
            <li>
              <div class="card-trip m-2">
                <%= cl_image_tag reservation.game_world.photos.first.key, class: "d-block show-img" %>
                <div class="card-trip-infos">
                  <div>
                    <div>
                      <%= link_to reservation_path(reservation) do %>
                        <p style="font-size:20px">Reservation N°<%= reservation.id %></p>
                        <p style="font-size: 14px"><%= reservation.game_world.name %></p>
                         <p style="font-size: 14px">from <%= reservation.start_date %> to <%= reservation.end_date %> </p>
                      <% end %>
                    </div>
                    <h6 class="status-tag"><%= reservation.status == "confirmed" ? "✅" : "⏳" %></h6>
                  </div>
                </div>
              </div>
            </li>
         <% end %>
        </ul>
      </div>
    </div>
</div>

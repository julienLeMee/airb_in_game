<div class="container">
  <h1>Book an amazing experience</h1>
  <h3 class="mb-4">Inside <%= @game_world.name %></h3>
  <%= simple_form_for([@game_world, @reservation]) do |f| %>
    <%= f.input :start_date, as: :date, html5: true %>
    <%= f.input :end_date, as: :date, html5: true %>
    <%= f.submit %>
  <% end %>
</div>

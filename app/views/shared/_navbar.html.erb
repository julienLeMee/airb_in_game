<div class="relative">
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <div class="container-fluid">
      <%= link_to "/", class: "navbar-brand" do %>
        <%= image_tag "https://res.cloudinary.com/hollywoodxj/image/upload/v1660667197/AirBinGameLogo_drajzi.png" %>
      <% end %>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <%= simple_form_for :search, url: game_worlds_path, method: :get, defaults: { wrapper: false } do |f| %>
        <div class="search-form-control form-group d-flex">
          <%= f.input :name, placeholder: "Search for a Game World", class:"form-control string required", label: false %>
          <%= f.button :button do %>
              <i class="fas fa-search"></i>
          <% end %>
        </div>
      <% end %>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">

        <ul class="navbar-nav me-auto">
          <% if user_signed_in? %>
            <li class="nav-item active">
              <%= link_to "Home", "/", class: "nav-link" %>
            </li>
            <li class="nav-item">

              <%= link_to "My Bookings", reservations_path, class: "nav-link" %>
            </li>
            <li class="nav-item dropdown">
              <%= image_tag "https://res.cloudinary.com/dvbzytnxf/image/upload/v1660835473/Hollowknight_lzisdj.webp", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%= link_to "Profile", "/", class: "dropdown-item text-center mt-1" %>
                <%= link_to "Add world", new_game_world_path, class: "dropdown-item text-center mt-1" %>
                <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item text-center mt-1", data: {turbo_method: :delete} %>
              </div>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
